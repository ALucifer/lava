{% extends 'layout.html.twig' %}

{% block title %}Room{% endblock %}

{% block body %}
    <div class="container">
        <h1>Room</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ room.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ room.name }}</td>
                </tr>
                <tr>
                    <th>NbPlaces</th>
                    <td>{{ room.nbPlaces }}</td>
                </tr>
                <tr>
                    <th>State</th>
                    <td>{{ room.state ? 'Yes' : 'No' }}</td>
                </tr>
                <tr>
                    <th>CommentState</th>
                    <td>{{ room.commentState }}</td>
                </tr>
            </tbody>
        </table>

        <a class="btn btn-primary" href="{{ path('room_index') }}">back to list</a>

        <a class="btn btn-warning" href="{{ path('room_edit', {'id': room.id}) }}">edit</a>

        <p>
            {{ include('room/_delete_form.html.twig') }}
        </p>
    </div>
{% endblock %}