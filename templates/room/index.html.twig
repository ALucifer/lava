{% extends 'layout.html.twig' %}

{% block title %}Room index{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-8">
                <div class="d-flex justify-content-sm-center">
                    <h1>Room List</h1>
                </div>
            </div>
            <div class="col-4">
                <div class="d-flex justify-content-center">
                    <a class="btn btn-primary" href="{{ path('room_new') }}">Create new</a>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row align-items-center">
            <div class="col">
                <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>NbPlaces</th>
                <th>State</th>
                <th>CommentState</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for room in rooms %}
            <tr>
                <td>{{ room.id }}</td>
                <td>{{ room.name }}</td>
                <td>{{ room.nbPlaces }}</td>
                <td>{{ room.state ? 'Yes' : 'No' }}</td>
                <td>{{ room.commentState }}</td>
                <td>
                    <a class="btn btn-info" href="{{ path('room_show', {'id': room.id}) }}">show</a>
                    <a class="btn btn-warning" href="{{ path('room_edit', {'id': room.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
            </div>
        </div>
    </div>

{% endblock %}