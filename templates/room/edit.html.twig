{% extends 'layout.html.twig' %}

{% block title %}Edition {{ room.name }}{% endblock %}

{% block body %}
    <div class="flex">
        <div class="col-4 offset-4">
            <h2>{{ room.name }}</h2>
            {% form_theme form 'bootstrap_4_layout.html.twig' %}
            {{ form_start(form) }}
                {{ form_errors(form) }}

                {{ form_row(form.name) }}
                {{ form_row(form.nbPlaces) }}
                {{ form_row(form.state) }}

                <div id="commentState">
                    {{ form_row(form.commentState) }}
                </div>

                <button class="btn btn-primary">{{ button_label|default('Mettre Ã  jour') }}</button>
            {{ form_end(form) }}
            {{ include('room/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}

{% block javascripts %}

    <script type="text/javascript">
        $(document).ready(function () {
            // check default state if true hide relative field
            if (!$("input[type=checkbox]").prop('checked')) {
                $('#commentState').hide();
            }

            //actions to do when checkbox change
            $("input[type=checkbox]").on('click', function () {

                if ($("input[type=checkbox]").prop('checked')) {
                    console.log($("input[type=checkbox]").prop('checked'))
                    $('#commentState').show();
                }
                else {
                    $('#commentState').hide();
                }
            })
        });
    </script>
{% endblock %}
