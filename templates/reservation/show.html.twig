{% extends 'layout.html.twig' %}

{% block title %}Reservation{% endblock %}

{% block body %}
    <div class="container">
        <h1>Reservation</h1>

        <table class="table">
            <tbody>
            <tr>
                <th>Room</th>
                <td>{{ reservation.room | room_name }}</td>
            </tr>
            <tr>
                <th>Start</th>
                <td>{{ reservation.start ? reservation.start|date('Y-m-d H:i') : '' }}</td>
            </tr>
            <tr>
                <th>End</th>
                <td>{{ reservation.end ? reservation.end|date('Y-m-d H:i') : '' }}</td>
            </tr>
            <tr>
                <th>State</th>
                <td>{{ reservation.state ? reservation.state|join(', ') : '' }}</td>
            </tr>
            </tbody>
        </table>
        <a href="{{ url('room_calendar_show', {"id": reservation.room.id}) }}"
           class="btn btn-primary">back to planning</a>

        <a href="{{ path('reservation_edit', {'id': reservation.id}) }}">edit</a>

        {{ include('reservation/_delete_form.html.twig') }}
    </div>
{% endblock %}