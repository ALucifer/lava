{% extends 'layout.html.twig' %}

{% block title %}Liste des utilisateurs{% endblock %}

{% block body %}
    <div class="flex">
        <div class="col-10 offset-1">
            <h1 class="text-center">Liste des utilisateurs</h1>
            <table class="table">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nom - Prénom</th>
                        <th>Email</th>
                        <th>Roles</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                {% for user in users %}
                    <tr>
                        <td>{{ user.id }}</td>
                        <td>{{ user.firstname }} - {{ user.lastname }}</td>
                        <td>{{ user.email }}</td>
                        <td>{{ user.roles ? user.roles|join(', ') : '' }}</td>
                        <td>
                            <a href="{{ path('user_show', {'id': user.id}) }}" class="btn btn-success">Voir</a>
                            {% if user.isBlocked %}
                                <a href="{{ path('user_change_is_blocked', {'id': user.id, 'isBlocked': 1}) }}" class="btn btn-info">Réactiver</a>
                            {% else %}
                                <a href="{{ path('user_change_is_blocked', {'id': user.id, 'isBlocked': 0}) }}" class="btn btn-danger">Bloquer</a>
                            {% endif %}
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="7">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            <a href="{{ path('user_new') }}" class="btn btn-dark">Nouvel utilisateur</a>
        </div>
    </div>
{% endblock %}