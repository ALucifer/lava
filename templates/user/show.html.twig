{% extends 'layout.html.twig' %}

{% block title %}User Profile{% endblock %}

{% block body %}
    <div class="container">
        <h1>Profile</h1>

        <table class="table">
            <tbody>
            {% if is_granted('ROLE_ADMIN') -%}
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            {%- endif %}
            <tr>
                <th>Firstname</th>
                <td>{{ user.firstname }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ user.lastname }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            {#<tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>#}
            {% if is_granted('ROLE_ADMIN') -%}
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|join(', ') : '' }}</td>
            </tr>
            {%- endif %}
            </tbody>
        </table>
        <a class="btn btn-info" href="{{ path('user_index') }}">Reset Password</a>
        {% if is_granted('ROLE_ADMIN') -%}
        <a class="btn btn-primary" href="{{ path('user_index') }}">back to list</a>

        <a class="btn btn-warning" href="{{ path('user_edit', {'id': user.id}) }}">edit</a>

        <p>
            {{ include('user/_delete_form.html.twig') }}
        </p>
        {%- endif %}
    </div>
{% endblock %}